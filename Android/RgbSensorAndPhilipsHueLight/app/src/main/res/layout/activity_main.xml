<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RGB Sensor &amp; Philips Hue"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="@font/nanum"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dashboard"
            android:gravity="center"
            android:background="@drawable/textview_background"
            android:layout_margin="10dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:background="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R"
            android:textSize="15dp"
            android:fontFamily="@font/nanum"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="G"
            android:textSize="15dp"
            android:fontFamily="@font/nanum"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="15dp"
            android:fontFamily="@font/nanum"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:paddingTop="10dp"
        android:background="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum"
            android:id="@+id/textview_r"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum"
            android:id="@+id/textview_g"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum"
            android:id="@+id/textview_b"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:background="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CCT"
            android:textSize="15dp"
            android:fontFamily="@font/nanum"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Illuminance"
            android:textSize="15dp"
            android:fontFamily="@font/nanum"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:paddingTop="10dp"
        android:background="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0000 K"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum"
            android:id="@+id/textview_cct"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000 LUX"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/nanum"
            android:id="@+id/textview_illu"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Control"
            android:gravity="center"
            android:background="@drawable/textview_background2"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select the Light"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/black">
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/bulb"
            android:background="@drawable/stroke"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:id="@+id/button_bulb"
            android:padding="5dp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/circle"
            android:background="@drawable/stroke"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:id="@+id/button_circle"
            android:padding="5dp"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/strip"
            android:background="@drawable/stroke"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:id="@+id/button_strip"
            android:padding="5dp"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/all_light"
            android:background="@drawable/stroke"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:id="@+id/button_all_lights"
            android:padding="5dp"/>


    </LinearLayout>
</LinearLayout>